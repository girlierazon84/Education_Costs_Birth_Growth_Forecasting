# Ignore generated/intermediate data
data/interim/**
data/processed/**

# Keep ONLY the raw + external inputs needed for Streamlit Cloud
# (ignore everything in raw/external by default, then allow-list specific files)
data/raw/**
!data/raw/birth_data_per_region.csv
!data/raw/mortality_data_per_region.csv
!data/raw/population_0_16_years.csv
!data/raw/population_17_19_years.csv
!data/raw/migration_data_per_region.csv

data/external/**
!data/external/grundskola_costs_per_child.csv
!data/external/gymnasieskola_costs_per_child.csv

# Artifacts: ignore heavy outputs, keep the lightweight CSV artifacts used by dashboards
artifacts/**
!artifacts/forecasts/
!artifacts/forecasts/*.csv
!artifacts/metrics/
!artifacts/metrics/*.csv
!artifacts/metrics/eda/
!artifacts/metrics/eda/*.csv
!artifacts/.gitkeep

# Still ignore heavy artifact types if they appear inside allowed folders
artifacts/**/*.joblib
artifacts/**/*.png
artifacts/**/*.pdf
artifacts/**/*.parquet
artifacts/**/*.db

